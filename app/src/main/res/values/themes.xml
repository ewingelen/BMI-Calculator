<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BMICalculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@drawable/square_horizontal_gradient_background</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.BMICalculator">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>