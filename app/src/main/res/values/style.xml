<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditText">
        <item name="android:background">@drawable/rounded_stroke_gray_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/Input1</item>
    </style>

    <style name="NumberPicker">
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="Divider">
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Divider1" parent="Divider">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Divider2" parent="Divider">
        <item name="android:background">@color/light_green</item>
    </style>

    <style name="Divider3" parent="Divider">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Button">
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">@dimen/size_0</item>
        <item name="android:insetBottom">@dimen/size_0</item>
    </style>

    <style name="ButtonBig" parent="Button">
        <item name="android:textAppearance">@style/Button1</item>
        <item name="android:background">@drawable/rounded_horizontal_gradient_background</item>
    </style>

    <style name="AdButton" parent="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/AdButtonText</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="ButtonSmall" parent="Button">
        <item name="iconTint">@null</item>
        <item name="iconSize">@dimen/size_24</item>
        <item name="android:textAppearance">@style/Button2</item>
        <item name="android:background">@drawable/rounded_stroke_white_background</item>
    </style>
</resources>